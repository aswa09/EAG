{
  "manifest_version": 3,
  "name": "Teams Slacker Alert",
  "version": "1.0",
  "description": "A sarcastic reminder to stay active on MS Teams",
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.teams.microsoft.com/*",
    "*://*.teams.live.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.teams.microsoft.com/*",
        "*://*.teams.live.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["sounds/*"],
    "matches": [
      "*://*.teams.microsoft.com/*",
      "*://*.teams.live.com/*"
    ]
  }]
} 